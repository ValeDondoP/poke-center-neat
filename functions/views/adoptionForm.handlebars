<div class="container">
        <h1>Adoption Form</h1>
        <form action="/miFuncion/adopt-pokemon/" method="POST">
        <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <input type="hidden" name="pokemonId" value="{{pokemonId}}">
            <div>
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div>
                <label for="lastname">Last Name:</label>
                <input type="text" id="lastname" name="lastname" required>
            </div>
            <div>
                <label for="rut">RUT:</label>
                <input type="text" id="rut" name="rut" pattern="[0-9]*" required>
            </div>
             <div>
                <label for="address">Address:</label>
                <input type="text" id="address" name="address" required>
            </div>
            <div>
                <label for="description">Why should we give you this Pok√©mon?</label>
                <textarea id="description" name="description" required></textarea>
            </div>
            <!--div>
            <label for="document">Upload identification document (optional):</label>
            <input type="file" id="document" name="document">
            </div> -->

            <button type="submit">Submit</button>
        </form>
    </div>


